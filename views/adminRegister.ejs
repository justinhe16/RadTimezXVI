<% include header.ejs %>

<% if (message.length > 0) { %>
  <div style="border-style: none; border-radius: 0em" class="alert alert-danger" role="alert"><%= message %></div>
<% } %>

<form style="padding-bottom: 50px; float: none; margin: 0 auto; width: 60%" action="/registerAdmin" method="POST">
  <div class="form-group">
    <label for="username">Username</label>
    <input name="username" type="text" class="form-control" id="username" placeholder="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="adminKey">Admin Key</label>
    <input name="adminKey" type="password" class="form-control" id="adminKey" placeholder="admin Key">
  </div>
  <button type="submit" class="btn btn-primary btn-block btn-lg">Register</button>
</form>