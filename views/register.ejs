<% include header.ejs %>

<% if (message.length > 0) { %>
  <div style="border-style: none; border-radius: 0em" class="alert alert-danger" role="alert"><%= message %></div>
<% } %>

<form style="padding-bottom: 50px; float: none; margin: 0 auto; width: 60%" action="/registerTeam" method="POST">
