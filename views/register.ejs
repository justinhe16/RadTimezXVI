    <label for="username">Team Name</label>
    <input name="username" type="text" class="form-control" id="username" placeholder="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="member1">Name of Member #1</label>
    <input name="member1" type="text" class="form-control" id="member1" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="member2">Name of Member #2</label>
    <input name="member2" type="text" class="form-control" id="member2" placeholder="Name">
  </div>
    <div class="form-group">
    <label for="member3">Name of Member #3</label>
    <input name="member3" type="text" class="form-control" id="member3" placeholder="Name">
  </div>
    <div class="form-group">
    <label for="member4">Name of Member #4</label>
    <input name="member4" type="text" class="form-control" id="member4" placeholder="Name">
  </div>
    <div class="form-group">
    <label for="member5">Name of Member #5</label>
    <input name="member5" type="text" class="form-control" id="member5" placeholder="Name">
  </div>
    <div class="form-group">
    <label for="member6">Name of Member #6</label>
    <input name="member6" type="text" class="form-control" id="member6" placeholder="Name">
  </div>
  <button type="submit" class="btn btn-primary btn-block btn-lg">Register</button>
</form>